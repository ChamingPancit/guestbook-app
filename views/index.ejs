<%- include("partials/header.ejs") %>


    <div class="flex items-center justify-center mt-20">
        <form action="/posts" method="POST" class="flex flex-col">
            <label class="mb-2 text-center text-2xl font-bold" for="nameOfGuest">Name</label> <input
                class="mb-8 text-center p-4 border-2 border-gray-800 rounded-md" type="text" name="nameOfGuest"
                placeholder="Type your name">
            <label class="text-center mb-2 text-2xl font-bold" for="messageOfGuest">Message</label> <input
                class=" mb-10 p-10  text-center border-2 border-gray-800 rounded-md" type="text" name="messageOfGuest"
                placeholder="Type your message">
            <button
                class="relative overflow-hidden border-2 border-blue-700 rounded-md text-blue-700 uppercase no-underline px-5 py-2 text-lg cursor-pointer font-bold bg-transparent transition-all duration-1000 btn-tailwind"
                type="submit">Submit</button>
        </form>
    </div>

    <%if (locals.guestBook) { %>
        <% guestBook.forEach(entry=> {%>
            <div class="box flex flex-col items-center justify-center mt-20 w-1/2 mx-auto gap-2">
                <h2 class="font-bold text-blue-600 text-2xl">
                    <a href="/posts/<%= entry.id %>">
                        <%=entry.name %>
                    </a>
                </h2>
                <p>
                    <%= entry.time %>
                </p>
            </div>

            <% });%>
                <% } %>


                    <%- include("partials/footer.ejs") %>