<%- include("partials/header.ejs") %>
    <div class="box mx-auto w-1/2">
        <% if (locals.entry) {%>

            <div class="flex flex-col mt-10 items-center justify-center">
                <h1 class="font-bold text-blue-600 text-2xl mt-5 mb-2">
                    <%= entry.name %>
                </h1>
                <p class="font-light text-black text-l">
                    <%= entry.message %>
                </p>
                <small class="text-gray-500 mb-5">
                    <%= entry.time %>
                </small>

                <div class="flex flex-row gap-5 mb-5 ">
                    <a href="/update/<%= entry.id %>"
                        class="button relative overflow-hidden border-2 border-blue-700 rounded-md text-blue-700 uppercase no-underline px-5 py-2 text-lg cursor-pointer font-bold bg-transparent transition-all duration-1000 btn-tailwind">Update</a>
                    <form action="/delete/<%= entry.id %>" method="POST">
                        <button
                            class="button relative overflow-hidden border-2 border-blue-700 rounded-md text-blue-700 uppercase no-underline px-5 py-2 text-lg cursor-pointer font-bold bg-transparent transition-all duration-1000 btn-tailwind">Delete</button>
                    </form>
                </div>
                <% } %>
            </div>
            <%- include("partials/footer.ejs") %>